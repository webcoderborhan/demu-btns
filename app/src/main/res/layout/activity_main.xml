<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingBottom="20dp"
            >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="First Button"
        android:backgroundTint="@color/yallow"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_radius"
        android:focusable="true"
        android:fontFamily="serif"
        android:lines="1"
        android:linksClickable="true"
        android:padding="12dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Second Button"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/on_press_color"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="On Press Button"
        android:textSize="18dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/empty_btn"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Empty Button"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:backgroundTint="@null" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:textColor="#000000"
        android:padding="10dp"
        android:background="@drawable/three_color_curved"
        app:backgroundTint="@null"
        />

    <Button
        android:id="@+id/btn_anim"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/patta_btn"
        android:focusable="true"
        android:fontFamily="serif"
        android:lines="1"
        android:linksClickable="true"
        android:padding="16dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Second Button"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_anim1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/patta_btn"
                android:focusable="true"
                android:fontFamily="serif"
                android:lines="1"
                android:linksClickable="true"
                android:padding="16dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="Second Button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>
    <Button
        android:id="@+id/btn_anim2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/patta_btn"
        android:focusable="true"
        android:fontFamily="serif"
        android:lines="1"
        android:linksClickable="true"
        android:padding="16dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Second Button"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="@null"/>

            <Button
                android:id="@+id/btn_anim3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/patta_btn"
                android:focusable="true"
                android:fontFamily="serif"
                android:lines="1"
                android:linksClickable="true"
                android:padding="16dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="Second Button"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:backgroundTint="@null"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:padding="10dp"
                >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="Button One"
                    android:layout_marginRight="5dp"
                    app:cornerRadius="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:backgroundTint="@color/yallow"

                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Button Two"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    android:backgroundTint="@color/yallow"
                    />
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Button Three"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    android:backgroundTint="@color/yallow"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</RelativeLayout>